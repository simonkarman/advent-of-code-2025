{
  "name": "advent-of-code-2025",
  "version": "1.0.0",
  "description": "Advent of Code solutions 2025 by Simon Karman",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simonkarman/advent-of-code-2025.git"
  },
  "author": "Simon Karman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/simonkarman/advent-of-code-2025/issues"
  },
  "homepage": "https://github.com/simonkarman/advent-of-code-2025#readme",
  "scripts": {
    "init-day": "touch \"input/day${npm_config_number}example.txt\" \"input/day${npm_config_number}.txt\" && cp src/day00.ts \"src/day${npm_config_number}.ts\" && git add --all",
    "dev-test": "jest --verbose=false",
    "test": "jest --silent --verbose",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint --fix",
    "precommit": "npm run lint && npm test"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "husky": "4.3.8",
    "jest": "^27.2.1",
    "lint-staged": "^11.1.2",
    "ts-jest": "^27.0.5",
    "typescript": "4.4.3"
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run lint:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged && npm run precommit"
    }
  }
}
